<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8sp">
        
        <TextView
            android:id="@+id/pokeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="120"/>


        <ImageView
            android:id="@+id/pokeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pokeId"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="12sp"
            android:scaleType="center"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/pokeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/pokeImage"
            android:text="@string/default_name"
            />

        <TextView
            android:id="@+id/pokeWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_alignLeft="@id/pokeName"
            android:layout_below="@id/pokeName"
            android:text="@string/default_weight"
            />

        <TextView
            android:id="@+id/pokeExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_alignLeft="@id/pokeName"
            android:layout_below="@id/pokeWeight"
            android:text="@string/default_experience"
            />

        <TextView
            android:id="@+id/pokeHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_toRightOf="@id/pokeName"
            android:text="Height"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>